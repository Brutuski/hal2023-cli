#!/usr/bin/env bash

## COLORS ##
BLACK='\033[0;30m'
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[0;37m'
RESET='\033[0m'

## Formatting ##

# Logo
_ASCII=$(
  cat <<EOF
██╗  ██╗ █████╗ ██╗         ██████╗  ██████╗ ██████╗ ██████╗
██║  ██║██╔══██╗██║         ╚════██╗██╔═████╗╚════██╗╚════██╗
███████║███████║██║          █████╔╝██║██╔██║ █████╔╝ █████╔╝
██╔══██║██╔══██║██║         ██╔═══╝ ████╔╝██║██╔═══╝  ╚═══██╗
██║  ██║██║  ██║███████╗    ███████╗╚██████╔╝███████╗██████╔╝
╚═╝  ╚═╝╚═╝  ╚═╝╚══════╝    ╚══════╝ ╚═════╝ ╚══════╝╚═════╝
EOF
)

# Labels
CHATGPT="${CYAN}\033[1mChatGPT:\033[0m${RESET}"

## API Key ##
api_key=$(<~/.chat-gpt-api)

## Default Parameters
TEMP=${TEMP:-0.8}
MAX_TOKENS=${MAX_TOKENS:-2048}

#ROLE_SYSTEM="You are ChatGPT. Please answer each query in a precise and short manner. Don't show more than 10 items in a list."

printf "\033c"
echo -e "\n${YELLOW}${_ASCII}${RESET}\n"

## Checks for ChatGPT Error Message ##
connectionError() {
  if echo "$1" | jq -e '' >/dev/null; then
    echo -e "Your message failed to reach Open AI's API."
    echo -e "Please check your API key to make sure it is correct"
    exit 1
  fi
}

## Parses response from chatGPT ##
chatResponse() {
  user_input=$1
  response=$(curl -sS https://api.openai.com/v1/chat/completions \
    -H "Authorization: Bearer $api_key" \
    -H "Content-Type: application/json" \
    -d '{
                    "model": "gpt-3.5-turbo",
                    "messages": [
                                  {"role": "user", "content": "'"$user_input"'"}
                                ],
                    "max_tokens": '$MAX_TOKENS',
                    "temperature": '$TEMP'
                    }' | jq -r '.choices[].message.content' | sed '1,2d')

  connectionError "$response"
  echo -e "\n${CHATGPT} ${GREEN}${response}${RESET}"
  saveHistory "$user_input" "$response"
}

## Saves responses in a history file with timestamp
## ~/.hal2023_history.txt
## History file isn't deleted while uninstalling
saveHistory() {
  prompt=$1
  reply=$2
  date_time=$(date +"%d-%m-%y at %H:%M")
  echo -e "\n$date_time\nUser: $prompt \nChatGPT- $reply" >> ~/.hal2023_history.txt
}

## Check for a History File
if [ ! -f ~/.hal2023_history.txt ]; then
  touch ~/.hal2023_history.txt
fi

while true; do
  echo -e "\n\033[2mType exit, quit or :q to exit.\033[0m"
  echo -e "${WHITE}Write a message...${RESET}"
  read -r input

  if [ "$input" == "exit" ]; then
    echo -e "\nSuccessfuly quit HAL2023\n"
    exit 0
  elif [ "$input" == "quit" ]; then
    echo -e "\nSuccessfuly quit HAL2023\n"
    exit 0
  elif [ "$input" == ":q" ]; then
    echo -e "\nSuccessfuly quit HAL2023\n"
    exit 0
  else
    chatResponse "$input"
  fi
done
